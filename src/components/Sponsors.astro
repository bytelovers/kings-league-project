---
import Container from './Container.astro'
---

<section class='text-sm text-white p-8 bg-gradient-to-tr from-black via-black to-principal border-white border-t-2 border-b-2'>
	<Container>
		<div class='flex justify-between flex-wrap gap-10'>
			<div>
				<div class='border-b border-[#F8AF3F] mb-10'>
					<span class='font-black'>Principal</span> partner
				</div>

				<img src='/sponsors/logo-infojobs.svg' alt='Logo Principal Sponsor' loading="lazy" decoding="async" fetchpriority="low" />
			</div>

			<div>
				<div class='border-b border-[#F8AF3F] mb-10'>
					<span class='font-black'>Stadium</span> partner
				</div>

				<img src='/sponsors/stadium-partner.svg' alt='Logo Stadium Sponsor' loading="lazy" decoding="async" fetchpriority="low" />
			</div>

			<div class='col-span-3'>
				<div class='border-b border-[#F8AF3F] mb-10'>
					<span class='font-black'>Main</span> partner
				</div>

				<div class='grid grid-cols-8 gap-5 items-center'>
					<img src='/sponsors/logo-grefusa.svg' alt='Logo Grefusa Sponsor' loading="lazy" decoding="async" fetchpriority="low" />
					<img src='/sponsors/logo-spotify.svg' alt='Logo Spotify Sponsor' loading="lazy" decoding="async" fetchpriority="low" />
					<img src='/sponsors/logo-simyo.svg' alt='Logo Smyo Sponsor' loading="lazy" decoding="async" fetchpriority="low" />
					<img src='/sponsors/logo-adidas.svg' alt='Logo Adidas Sponsor' loading="lazy" decoding="async" fetchpriority="low" />
					<img src='/sponsors/logo-mahou.svg' alt='Logo Mahau Sponsor' loading="lazy" decoding="async" fetchpriority="low" />
					<img src='/sponsors/logo-mi.svg' alt='Logo MI Sponsor' loading="lazy" decoding="async" fetchpriority="low" />
					<img src='/sponsors/logo-shukran.svg' alt='Logo Shukran Sponsor' loading="lazy" decoding="async" fetchpriority="low" />
					<img src='/sponsors/logo-imagin.svg' alt='Logo Imagin Sponsor' loading="lazy" decoding="async" fetchpriority="low" />
					<img src='/sponsors/logo-iqoption.svg' alt='Logo IQ Sponsor' loading="lazy" decoding="async" fetchpriority="low" />
				</div>
			</div>

			<div>
				<div class='border-b border-[#F8AF3F] mb-10'>
					<span class='font-black'>Hosting</span> partner
				</div>

				<img src='/sponsors/hosting-partner.svg' alt='Logo Stadium Sponsor' loading="lazy" decoding="async" fetchpriority="low" />
			</div>
		</div>
	</Container>
</section>
